<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>JDBC Homework</display-name>
    <welcome-file-list>
        <welcome-file>Form.html</welcome-file>
    </welcome-file-list>


    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>servlets.HelloWorldServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FormServlet</servlet-name>
        <servlet-class>servlets.FormServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FormServlet</servlet-name>
        <url-pattern>/form</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReadUsersServlet</servlet-name>
        <servlet-class>user.servlets.ReadUsersServlet</servlet-class>
        <init-param>
            <param-name>dbUrl</param-name>
            <param-value>jdbc:mysql://localhost:3306/users</param-value>
        </init-param>
        <init-param>
            <param-name>dbUser</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>123123</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReadUsersServlet</servlet-name>
        <url-pattern>/ReadServlet</url-pattern>
    </servlet-mapping>


</web-app>